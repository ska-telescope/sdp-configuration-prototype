{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Configure Scan",
  "description": "Schema for Configure",
  "version": "1.0.0",
  "type": "object",
  "properties": {
    "id": {
      "type": "string",
      "description": "PB Id, PB_[date]_[unique_id]_[project]",
      "pattern": "^PB_[0-9]{8}_[0-9]{4}_.*$"
    },
    "sbi_id": {
      "type": "string",
      "description": "SBI Id, SBI_[date]_[unique_id]",
      "pattern": "^SBI_[0-9]{8}_[0-9]{4}$"
    },
    "type": {
      "type": "string",
      "description": "REAL_TIME or OFFLINE"
    },
    "workflow": {
      "type": "object",
      "properties": {
        "id": {
          "type": "string",
          "description": "Project Id"
        },
        "version": {
          "type": "string",
          "description": "Workflow version"
        }
      }
    },
    "parameters": {
      "type": "object",
      "properties": {
        "num_stations": {
          "type": "integer",
          "description": "Number of stations"
        },
        "num_channels": {
          "type": "integer",
          "description": "Number of channels"
        },
        "num_polarisations": {
          "type": "integer",
          "description": "Number of polarisations"
        },
        "freq_start_hz": {
          "type": "number",
          "description": "Frequency start"
        },
        "freq_end_hz": {
          "type": "number",
          "description": "Frequency end"
        },
        "fields": {
          "type": "object",
          "properties": {
            "system": {
              "type": "string",
              "description": "Type of system"
            },
            "name": {
              "type": "string",
              "description": "Name of field"
            },
            "ra": {
              "type": "string",
              "description": "right ascension"
            },
            "dec": {
              "type": "string",
              "description": "declination"
            }
          }
        }
      }
    },
    "scan_parameters": {
      "type": "object",
      "properties": {
        "scan_id": {
          "type": "integer",
          "description": "Scan Id",
          "pattern": "^[0-9]{5}$"
        },
        "field_id": {
          "type": "integer",
          "description": "Field Id"
        },
        "interval_ms": {
          "type": "integer",
          "description": "Interval time"
        }
      }
    }
  }
}